@model List<IdentityItI.Models.Category>


     <!--? slider Area Start-->
        <section class="slider-area slider-area2">
            <div class="slider-active">
                <!-- Single Slider -->
                <div class="single-slider slider-height2">
                    <div class="container">
                        <div class="row">
                            <div class="col-xl-8 col-lg-11 col-md-12">
                                <div class="hero__caption hero__caption2">
                                    <h1 data-animation="bounceIn" data-delay="0.2s">Categories</h1>
                                    <!-- breadcrumb Start-->
                                    <nav aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                            <li class="breadcrumb-item"><a href="#">Services</a></li> 
                                        </ol>
                                    </nav>
                                    <!-- breadcrumb End -->
                                </div>
                            </div>
                        </div>
                    </div>          
                </div>
            </div>
        </section>

<!-- Button trigger modal -->
<div class="text-center mt-4"> <!-- Center align the button and add some top margin -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
        Add Category
    </button>
</div>

<!-- Modal -->
<div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <!-- Form inside modal -->
   
        
<form enctype="multipart/form-data" id="categoryForm" asp-action="AddCategory">
    <div class="form-group">
        <label for="Name">Name</label>
        <input type="text"  name="Name"  class="form-control form-control-lg" id="Name" placeholder="Enter category name">
    </div>
    

         
  <button type="submit" class="btn btn-primary" >Submit</button>
</form>


      </div>
      <div class="modal-footer">
    <button type="button" class="btn btn-secondary" data-dismiss="modal" >Close</button>
   
</div>
    </div>
  </div>
</div>




<div class="container">
  <h2>Category Data</h2>
    @if (Model.Count != 0)
    {


        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>

                </tr>
            </thead>
            <tbody>

              

                    @foreach (var category in Model)
                    {


                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>

                            <td>
                                <button type="button" class="btn btn-primary btn-sm edit-btn" data-toggle="modal" data-target="#editModal" data-id="@category.Id" data-name="@category.Name">
                                    Edit
                                </button>
                          <button type="button" class="btn btn-primary btn-sm delete-btn" data-toggle="modal" data-target="#deleteModal" data-id="@category.Id" >
                                    Delete
                                </button>


                            </td>
                        </tr>
                    }

                

            </tbody>
        </table>
    }
    
     else
{
<table align="center" border="1" cellpadding="10">
    <tr>
      <td>
        There is no Lessons for this course
      </td>
    </tr>
  </table>    

    
}   

    
</div>



<!-- EditModal -->
<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-labelledby="editModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editModalLabel">Edit Course</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="editForm" asp-action="Edit"   enctype="multipart/form-data">
          <input type="hidden" id="categoryId" name="Id">
          <div class="form-group">
            <label for="courseName">Category Name</label>
            <input type="text" class="form-control" id="categoryName" name="Name">
          </div>
         

          

                <button type="submit" class="btn btn-primary">Save changes</button>
          <!-- Add more form fields as needed -->
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
  
      </div>
    </div>
  </div>
</div>


<!-- DeleteModal -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deleteModalLabel">Edit Course</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form id="DeleteForm" asp-action="Delete"   enctype="multipart/form-data">
          <input type="hidden" id="deletecategoryId" name="id">
          <div class="alert  alert-danger">
            Do you want to delete this category
          </div>
         

          

                <button type="submit" class="btn btn-primary">Yes</button>
          <!-- Add more form fields as needed -->
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">No</button>
  
      </div>
    </div>
  </div>
</div>





<script>

$(document).ready(function() {
  $('.edit-btn').click(function() {
    var categoryId = $(this).data('id');
    var categoryName = $(this).data('name');
   

   console.log(categoryId);

    $('#categoryId').val(categoryId);

    $('#categoryName').val(categoryName);
   
    
 
    // Set other fields as needed
  });

   $('.delete-btn').click(function() {
    var categoryId = $(this).data('id');
  
   

  
    $('#deletecategoryId').val(categoryId);

   
    // Set other fields as needed
  });
});





</script>